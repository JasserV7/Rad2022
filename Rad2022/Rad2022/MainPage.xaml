<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rad2022.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        

        <Entry x:Name="txtcodigo" Placeholder="Ingrese Codigo" Keyboard="Text" />
        <Entry x:Name="txtnombre" Placeholder="Ingrese Nombre" Keyboard="Text" />
        <Entry x:Name="txtapellido" Placeholder="Ingrese Apellido" Keyboard="Text" />
        <Entry x:Name="txttelefono" Placeholder="Ingrese Numero telefonico " Keyboard="Numeric" />
        <Entry x:Name="txtemail" Placeholder="Ingrese Email" Keyboard="Email" />

        <Button x:Name="btnagregar" Text="Salvar informacion" Clicked="btnagregar_Clicked" />

        <Button x:Name="btnseguir" Text=" Ir a la siguiente pagina" Clicked="btnseguir_Clicked"/>

    </StackLayout>

</ContentPage>
